<van-tabs sticky active="{{ active }}" swipeable>
<view wx:for="{{model}}" wx:key="{{index}}">
  <van-tab style="display:left" title="{{item.title}}">
  <view wx:for="{{item.detail}}" wx:key="{{index}}">
    <van-card tag="{{item.tag}}" price="{{item.price}}" desc="{{item.desc}}" title="{{item.name}}" thumb="{{ item.image }}">
      <view slot="footer">
        <van-stepper value="{{ item.num }}" integer min="0" step="1" bind:change="onSlotChange" data-name="{{item.name}}" data-price="{{item.price}}" data-id="{{item.id}}" />
      </view>
    </van-card>
    </view>
  </van-tab>
</view>
</van-tabs>
<van-popup bind:close="updateoderlist" overlay="true" safe-area-inset-top="true" custom-style="bottom:50rpx;" position="bottom" show="{{ showsubmitlist }}" close-on-click-overlay="true">
  <van-cell style="text-align:left;" title="订单详情" />
  <view wx:if="{{showsubmitlist}}" wx:for="{{userorderlist}}" wx:key="{{index}}">
    <van-cell class="ordertitle" title="{{item.name}}" />
    <van-stepper class="ordernum" value="{{ item.num }}" integer min="0" step="1" bind:change="onSlotChange" data-name="{{item.name}}" data-price="{{item.price}}" data-id="{{item.id}}" />
  </view>
</van-popup>
<van-submit-bar catchtap="showorderlist" safe-area-inset-bottom="false" wx:if="{{showsubmit}}" price="{{pricesum}}" button-text="提交订单" bind:submit="onSubmit" style="pandding-bottom:0;margin:1rpx soild black" />